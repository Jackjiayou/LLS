<view class="container"><view class="report-header"><text class="report-title">练习报告</text><text class="scene-name">{{sceneName}}</text></view><view class="report-content"><view class="score-section"><view class="overall-score"><text class="score-value">{{report.overall}}</text><text class="score-label">总体评分</text></view><view class="radar-chart"><canvas class="radar-canvas" canvas-id="radarChart" id="radarChart"></canvas></view><view class="dimension-scores"><block wx:for="{{report.dimensions}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view class="dimension-item"><view class="dimension-bar-wrapper"><view class="dimension-name">{{item.name}}</view><view class="dimension-bar-container"><view class="dimension-bar" style="{{'width:'+(item.score+'%')+';'}}"><text class="dimension-score">{{item.score}}</text></view></view></view></view></block></view></view><view class="analysis-section"><view class="section-title">详细分析</view><block wx:for="{{report.analysis}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view class="analysis-item"><view class="analysis-header"><view class="analysis-title">{{item.title}}</view><view class="analysis-score">{{item.score+"分"}}</view></view><view class="analysis-content"><text>{{item.content}}</text></view></view></block></view><view class="suggestion-section"><view class="section-title">改进建议</view><view class="suggestion-list"><block wx:for="{{report.suggestions}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view class="suggestion-item"><view class="suggestion-icon">{{index+1}}</view><view class="suggestion-content"><text>{{item}}</text></view></view></block></view></view></view><view class="action-buttons"><button data-event-opts="{{[['tap',[['shareReport',['$event']]]]]}}" class="share-btn" bindtap="__e">分享报告</button><button data-event-opts="{{[['tap',[['backToHome',['$event']]]]]}}" class="back-btn" bindtap="__e">返回首页</button></view></view>