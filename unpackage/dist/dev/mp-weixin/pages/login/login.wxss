
.login-container {
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
	height: 100vh;
	padding: 40rpx;
	background-color: #f8f8f8;
}
.logo {
	width: 200rpx;
	height: 200rpx;
	margin-bottom: 40rpx;
}
.logo image {
	width: 100%;
	height: 100%;
}
.title {
	font-size: 40rpx;
	font-weight: bold;
	margin-bottom: 20rpx;
}
.subtitle {
	font-size: 28rpx;
	color: #666;
	margin-bottom: 60rpx;
}
.login-btn {
	width: 80%;
	height: 88rpx;
	line-height: 88rpx;
	background-color: #07c160;
	color: #fff;
	border-radius: 44rpx;
	font-size: 32rpx;
}

